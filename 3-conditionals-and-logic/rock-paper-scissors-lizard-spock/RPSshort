#include<iostream>
#include<stdlib.h>

int main(){
srand(time(NULL));
int comp = rand()%3 +1;
int user = 0;
std::cout<<"===================\n\n";
std::cout<<"Rock Paper Scissor\n\n";
std::cout<<"===================\n\n";

std::cout<<"1) Rock\n";
std::cout<<"2) Paper\n";
std::cout<<"3) Scissor\n";
std::cout<<"You Choose:";
std::cin>>user;
if(comp==1){
  std::cout<<"Computer choose Rock\n";
}
else if(comp==2){
  std::cout<<"Computer choose Paper\n";
}
else if(comp==3){
  std::cout<<"Computer choose Scissor\n";
}

if(comp==user){
  std::cout<<"Its a tie.\n";
}
else if((comp==2&&user==1)||(comp==3 && user==2) || (comp==1 && user==3)){
  std::cout<<"Computer Won\n";
}
else{
  std::cout<<"You Won!\n";
}

}
